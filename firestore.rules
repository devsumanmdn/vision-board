rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // "The Wall of False Hope" - Publicly visible, but only editable by the owner.
    match /vision_items/{itemId} {
      // 1. READ: Everyone can see the chaos.
      allow read: if true;
      
      // 2. CREATE: Only authenticated users can add to the pile.
      // We validate that the 'userId' field in the doc matches the auth token.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // 3. UPDATE/DELETE: Only the original dreamer can change/delete their delusion.
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
